@model LumberManagerWebEdition.Models.CreateOrderViewModel
@{
    ViewData["Title"] = "Confirm";
    int totalCartProducts = (int)ViewData["Cart"];
}

<h1>Confirm Order</h1>

<div class="row">
    <div class="col-md-4">
        <form id="confirm" asp-action="Confirm">
            <h2>Billing Address</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User.Business" class="control-label">Business</label>
                <p class="form-control">@Model.User.Business</p>
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.ContactFirstName" class="control-label">First Name</label>
                <p class="form-control">@Model.User.ContactFirstName</p>
            </div>
            <div class="form-group">
                <label asp-for="User.ContactLastName" class="control-label">Last Name</label>
                <p class="form-control">@Model.User.ContactLastName</p>
            </div>
            <div class="form-group">
                <label asp-for="User.Address" class="control-label">Street Address</label>
                <p class="form-control">@Model.User.Address</p>
            </div>
            <div class="form-group">
                <label asp-for="User.City" class="control-label">City</label>
                <p class="form-control">@Model.User.City</p>
            </div>
            <div class="form-group">
                <label asp-for="User.State" class="control-label">State</label>
                <p class="form-control">@Model.User.State</p>
            </div>
            <div class="form-group">
                <label asp-for="User.ZipCode" class="control-label">Zip Code</label>
                <p class="form-control">@Model.User.ZipCode</p>
            </div>

            <h2>Shipping Address</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Order.ShipBusiness" class="control-label">Business</label>
                <input class="form-control" asp-for="Order.ShipBusiness" />
            </div>
            <div class="form-group">
                <label asp-for="Order.ShipContactFirstName" class="control-label">First Name</label>
                <input id="firstName" class="form-control" asp-for="Order.ShipContactFirstName" />
                <span id="firstNameError" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.ShipContactLastName" class="control-label">Last Name</label>
                <input id="lastName" class="form-control" asp-for="Order.ShipContactLastName" />
                <span id="lastNameError" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.ShipAddress" class="control-label">Street Address</label>
                <input id="address" class="form-control" asp-for="Order.ShipAddress" />
                <span id="addressError" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.ShipCity" class="control-label">City</label>
                <input id="city" class="form-control" asp-for="Order.ShipCity" />
                <span id="cityError" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.ShipState" class="control-label">State</label>
                <input id="state" class="form-control" asp-for="Order.ShipState" />
                <span id="stateError" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.ShipZipCode" class="control-label">Zip Code</label>
                <<input id="zipCode" class="form-control" asp-for="Order.ShipZipCode" />
                <span id="zipCodeError" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Total products in cart</label>
                <p class="form-control">@totalCartProducts</p>
            </div>
            <div class="form-group">
                <label class="control-label">Total Price</label>
                <p class="form-control">$@string.Format("{0:n2}", ViewData["Total Price"])</p>
            </div>
            <div class="form-group">
                <input id="submit" type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



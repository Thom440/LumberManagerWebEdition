@model LumberManagerWebEdition.Models.Product

@{
    ViewData["Title"] = "UpdateInventory";
}

<h1>Update Inventory</h1>

<h4>@Model.OrderDisplayString()</h4>
<hr />
<!--Marked fields 'readonly' and 'hidden' because they should not be changed.-->
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateInventory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductID" />
            <div class="form-group">
                <input type="hidden" asp-for="Height" class="form-control" readonly/>
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Width" class="form-control" readonly/>
                <span asp-validation-for="Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Length" class="form-control" readonly/>
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OnHand" class="control-label"></label>
                <input asp-for="OnHand" class="form-control" />
                <span asp-validation-for="OnHand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Sold" class="form-control" readonly/>
                <span asp-validation-for="Sold" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
